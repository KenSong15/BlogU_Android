<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActvity"
    >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        app:srcCompat="@mipmap/add_btn" />

    <EditText
        android:id="@+id/postTitleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/imageButton"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Post Title Here"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_centerHorizontal="true"

        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="335dp" />

    <EditText
        android:id="@+id/postDesET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTitleET"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Post Description Here"
        android:inputType="textPersonName"
        android:padding="10dp"
        tools:layout_editor_absoluteX="98dp"
        android:layout_centerHorizontal="true"

        tools:layout_editor_absoluteY="335dp" />

    <Button
        android:id="@+id/submitPost"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postDesET"
        android:layout_marginTop="118dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="Add post"
        android:textColor="@android:color/white" />
</RelativeLayout>